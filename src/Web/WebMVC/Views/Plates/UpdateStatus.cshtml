@using Catalog.Domain.Enum
@model UpdatePlateStatusViewModel

<div class="container">
    <h2>Update Plate Status</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>@Model.Registration</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Plates" asp-action="UpdateStatus" method="post">
                        <input type="hidden" asp-for="PlateId" />
                        <input type="hidden" asp-for="Registration" />

                        <div class="form-group mb-3">
                            <label asp-for="NewStatus" class="form-label">New Status:</label>
                            <select asp-for="NewStatus" class="form-select" asp-items="Html.GetEnumSelectList<PlateStatus>()"></select>
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Update Status</button>
                            <a asp-action="Details" asp-route-id="@Model.PlateId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>