@model IEnumerable<WebMVC.Models.PlateViewModel>
@{
    ViewData["Title"] = "Registration Plates";
}
<div class="container">
    <h1 class="my-4">Registration Plates</h1>
    <div class="mb-4">
        <a asp-action="Available" class="btn btn-outline-primary">Available Plates</a>
        <a asp-action="Search" class="btn btn-outline-secondary">Search Plates</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Registration</th>
                    <th>Letters</th>
                    <th>Numbers</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plate in Model)
                {
                    <tr>
                        <td><strong>@plate.Registration</strong></td>
                        <td>@plate.Letters</td>
                        <td>@plate.Numbers</td>
                        <td>£@plate.SalePrice.ToString("N2")</td>
                        <td>
                            @if (plate.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Unavailable</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@plate.Id" class="btn btn-sm btn-primary">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>